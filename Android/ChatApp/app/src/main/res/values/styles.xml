<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        - <!--  Action Mode Overlay -->
        <item name="windowActionModeOverlay">true</item>
        <!-- Cor da Action Bar de Contexto (CAB) -->
        <item name="actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FabStyle">
        <item name="android:layout_width">@dimen/size_fab</item>
        <item name="android:layout_height">@dimen/size_fab</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_fab</item>
        <item name="android:layout_marginStart">@dimen/margin_left_fab</item>
        <item name="android:layout_marginRight">@dimen/margin_right_fab</item>
        <item name="android:layout_marginEnd">@dimen/margin_right_fab</item>
        <item name="android:layout_marginTop">@dimen/margin_top_fab</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_fab</item>
        <item name="android:src">@drawable/ic_send</item>
        <item name="elevation">@dimen/elevation_fab</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:scaleType">center</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
    </style>
</resources>