<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_message_send"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-2dp"
    android:paddingStart="10dp"
    android:paddingLeft="10dp">

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/frame_layout_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/view_divider"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorNameUser"/>

        <TextView
            android:id="@+id/text_view_text_message_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="6dp"
            android:lineSpacingExtra="1dp"
            android:singleLine="false"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_time_message_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorTextTime"
            android:textSize="12sp" />
    </FrameLayout>
</RelativeLayout>